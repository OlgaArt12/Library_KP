@model Library_KP.Models.Partition

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>Добавление нового раздела</h4>
<h5>
    @ViewBag.Message
</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NamePartition" class="control-lable"></label>
                <input asp-for="NamePartition" class="form-control" />
                <span asp-validation-for="NamePartition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад!</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
