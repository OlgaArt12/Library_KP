@model Library_KP.Models.Partition

@{
    ViewData["Title"] = "Информация о разделе:";
}

<h1>Информация о разделе</h1>

<div>
    <h4>Раздел</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Жанр:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NamePartition)
        </dd>
        <dd class="col-sm-10">
            <h5>Кол-во книг в этом жанре:</h5> @ViewBag.countBook
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PartitionId">Изменить</a> |
    <a asp-action="Index">Вернуться к таблице</a>
</div>
