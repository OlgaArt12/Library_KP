@model Library_KP.Models.ReadersModel.Reader

@{
    ViewData["Title"] = "Details";
}

<h1>Информация о читателе:</h1>

<div>
    <h4>Reader</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fcs)
        </dd>
        <dt class="col-sm-3">
            Паспортные данные:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.PassportData)
        </dd>
        <dt class="col-sm-3">
            Домашний адрес:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.HomeAddress)
        </dd>
        <dt class="col-sm-3">
            Кол-во книг, которые читатель брал:
        </dt>
        <dd class="col-sm-8">
            @ViewBag.countBook
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться назад!</a> |
    <a asp-action="Edit" asp-route-id="@Model.NumberTicket" class="btn btn-sm btn-info">Изменить данные</a>
</div>
